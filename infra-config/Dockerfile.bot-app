FROM python:3.11-slim

WORKDIR /app

# Copy requirements and install Python dependencies
COPY bot-app/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy bot-common (shared library)
COPY bot-common/ ./bot-common/

# Copy bot-app source code
COPY bot-app/ ./bot-app/

# Set Python path to include bot-common
ENV PYTHONPATH=/app

WORKDIR /app/bot-app

CMD ["python", "main.py"]